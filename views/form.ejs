<form method="POST" action="/new">
  <h3>Write a new massage</h3>
  <div>
    <label for="name"
      >Type your name:
      <input id="name" type="text" name="name" />
    </label>
  </div>
  <div>
    <label for="message"
      >Type your massage:
      <textarea id="message" name="messageText"></textarea>
    </label>
  </div>
  <button>Submit</button>
</form>
